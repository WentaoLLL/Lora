<!DOCTYPE html>
<html>

<head>
    <%- include('./layout/head') %>
</head>
<style>
    table tbody {
        display: block;
        max-height: 300px;
        overflow-y: scroll;
    }

    table thead,
    table tbody tr {
        display: table;
        width: 100%;
        table-layout: fixed;
    }
</style>

<body>
    <div id="app" class="wrapper">
        <%- include('./layout/adminMenu') %>

        <!-- Page Content  -->
        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Sidebar</span>
                    </button>
                </div>
            </nav>

            <h2>User Details
                <span v-if="form.role === 2">(Customer)</span>
                <span v-if="form.role === 1">(Secondary Admin)</span>
            </h2>

            <table class="table" style="height: 45%;">
                <!-- <thead class="thead-light">
                  <tr>
                    <th scope="col">User Id</th>
                    <th scope="col">User Name</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                  </tr>
                </thead> -->
                <tbody style="height: 100%; max-height: 100%;">
                    <tr>
                        <td><b>User Id</b></td>
                        <td>{{form._id}}</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><b>Name</b></td>
                        <td v-if="!edit">{{form.username}}</td>
                        <td v-else><input v-model="copy.username" type="text"></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><b>Email</b></td>
                        <td v-if="!edit">{{form.email}}</td>
                        <td v-else><input v-model="copy.email" type="email"></td>
                        <td></td>
                    </tr>

                    <tr v-if="form.role === 2">
                        <td><b>Wirtschaftseinheit</b></td>
                        <td v-if="!edit">{{form.wie}}</td>
                        <td v-else><input v-model="copy.wie" type="text"></td>
                        <td></td>
                    </tr>

                    <tr>
                        <td><b>Password</b></td>
                        <td v-if="!edit">{{form.password}}</td>
                        <td v-else><input v-model="copy.password" type="number"></td>
                        <td></td>
                    </tr>
                    <!-- <tr>
                        <td><b>Electrcity Useage</b></td>
                        <td >{{form.electricity}}</td>
                        <td></td>
                    </tr> -->
                </tbody>
            </table>
            <% if(user.role < 1){%>
            <div class="line"></div>
            <div v-if="!edit"><button @click="editData" class="btn btn-sm btn-warning">Edit</button></div>
            <div v-else>
                <button @click="update(edit)" class="btn btn-sm btn-success">Save</button>
                <button @click="edit=false" class="btn btn-sm btn-danger">Cancel</button>
            </div>
            <%}%>
        </div>
    </div>

    <%- include('./layout/footer') %>
            <script>
                var id = '<%= id  %>';
                new Vue({
                    el: '#app',
                    data: {
                        form: {},
                        copy: {},
                        edit: false,
                        buffer: ''
                    },
                    async mounted() {
                        let response = await fetch('/secured/api/users/' + id);
                        if (response.ok) {
                            let r = await response.json();
                            this.form = r.data;
                            this.copy = this.form
                        }
                    },
                    methods: {
                        getFormattedDate(date) {
                            date = new Date(date)
                            var year = date.getFullYear();
                            var month = (1 + date.getMonth()).toString();
                            month = month.length > 1 ? month : '0' + month;
                            var day = date.getDate().toString();
                            day = day.length > 1 ? day : '0' + day;
                            return day + '/' + month + '/' + year;
                        },
                        async update() {
                            let response = await fetch('/secured/api/users/' + id, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    username: this.copy.username,
                                    password: this.copy.password,
                                    email: this.copy.email,
                                    wie: this.copy.wie
                                })
                            });
                            if (response.ok) {
                                this.form = { ...this.copy }
                                this.edit = false;
                            }

                        },
                        editData() {
                            this.edit = true;
                            this.copy = { ...this.form }
                        }
                    },
                })
            </script>
</body>

</html>