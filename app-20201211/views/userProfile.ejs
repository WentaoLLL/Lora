<!DOCTYPE html>
<html>
    <head>
        <%- include('./layout/head') %>
    </head>
<style>
    table tbody{
        display: block;
        max-height: 200px;
        overflow-y: scroll;
    }

    table thead, table tbody tr{
        display: table;
        width: 100%;
        table-layout: fixed;
    }
</style>
<body>
    <div class="wrapper">
        <%- include('./layout/adminMenu') %>

        <!-- Page Content  -->
        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Sidebar</span>
                    </button>
                </div>
            </nav>

            <h2>Data for <%= data[0].userid %></h2>
              
              <table class="table">
                <thead class="thead-light">
                  <tr>
                    <!-- <th scope="col">Id</th> -->
                    <!-- <th scope="col">User Id</th> -->
                    <th scope="col">Water</th>
                    <th scope="col">Electricity</th>
                    <th scope="col">Gas</th>
                    <th scope="col">Time</th>
                  </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(d) { %>
                        <tr>
                            <!-- <th scope="row"><%= d._id %></th> -->
                            <!-- <td><%= d.userid %></td> -->
                            <td><%= d.water %></td>
                            <td><%= d.electricity %></td>
                            <td><%= d.gas %></td>
                            <td><%= new Date(d.time).toLocaleDateString() + ' '+ new Date(d.time).toLocaleTimeString() %></td>
                          </tr>
                        <tr>
                    <% }); %>
                </tbody>
              </table>

            <div class="line"></div>

        </div>
    </div>

    <%- include('./layout/footer') %>
</body>

</html>